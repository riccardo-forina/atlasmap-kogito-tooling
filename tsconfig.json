{
  "exclude": [
    "./**/node_modules"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "esnext",
      "dom",
      "es2018.promise"
    ],
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react"
  }
}
